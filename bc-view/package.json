{
  "name": "beancounter-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "start:prod": "NODE_ENV=production node build/server.js",
    "prettier": "prettier --write 'src/**/*.ts*'  && yarn lint",
    "prettier:check": "prettier  --check 'src/**/*.ts*' && yarn lint",
    "lint": "eslint 'src/**/*.ts*' && yarn lint-md",
    "lint-md": "remark .",
    "test": "razzle test --env=jsdom"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "axios-hooks": "^1.6.0",
    "express": "^4.17.1",
    "razzle-plugin-scss": "^3.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-number-format": "^4.0.8",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.1.2",
    "react-table": "^7.0.0-beta.12",
    "remark-lint": "^6.0.5"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.1",
    "@types/ramda": "^0.26.33",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.9.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/webpack": "^4.39.3",
    "@types/webpack-env": "^1.14.0",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "autoprefixer": "^9.7.0",
    "bulma": "^0.8.0",
    "bulma-start": "^0.0.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-jest": "^22.19.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "file-loader": "^4.2.0",
    "jest": "^24.8.0",
    "jest-emotion": "^10.0.17",
    "jest-glamor-react": "^4.3.1",
    "jest-junit": "^8.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.18.2",
    "ramda": "^0.26.1",
    "razzle": "^3.0.0",
    "razzle-plugin-postcss": "^2.2.4",
    "razzle-plugin-typescript": "^3.0.0",
    "react-hot-loader": "^4.12.15",
    "remark-cli": "^7.0.0",
    "remark-lint-no-literal-urls": "^1.0.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.36.1"
  },
  "pkg": {
    "scripts": "build/public/static2/**/*.js",
    "assets": [
      "build/public/static2/**/*.svg",
      "build/public/static2/**/*.css",
      "node_modules/**/*.sass"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --check",
      "eslint --fix --cache",
      "git add"
    ],
    "*.tsx": [
      "prettier --check",
      "eslint --fix --cache",
      "git add"
    ],
    "*.md": [
      "lint-md"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [],
    "testMatch": [
      "<rootDir>/src/**/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-emotion"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/src/setupTests.ts",
      "jest-localstorage-mock"
    ]
  }
}
